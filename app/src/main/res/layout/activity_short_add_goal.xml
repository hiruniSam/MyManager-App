<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShortAddGoal">


    <ImageView
        android:id="@+id/short1"
        android:layout_width="301dp"
        android:layout_height="162dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        app:srcCompat="@drawable/shrt1"
        tools:ignore="ImageContrastCheck" />

    <EditText
        android:id="@+id/txt_shortgoal"
        android:layout_width="322dp"
        android:layout_height="103dp"
        android:layout_below="@id/short1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_adds"
        android:backgroundTint="#EEEEEE"
        android:gravity="center_vertical"
        android:hint=" Short Term Goal Description"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="#000000"

        android:textStyle="normal" />


    <EditText
        android:id="@+id/txt_shortdate"
        android:layout_width="322dp"
        android:layout_height="82dp"
        android:layout_below="@id/txt_shortgoal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rounded_adds"
        android:backgroundTint="#EEEEEE"
        android:gravity="center_vertical"
        android:hint=" DD/MM/YY "
        android:inputType="date"
        android:padding="20dp"
        android:textColor="#000000"
        android:textStyle="normal" />

    <Button
        android:id="@+id/short_add_button"
        android:layout_width="154dp"
        android:layout_height="69dp"
        android:layout_below="@id/txt_shortdate"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:onClick="Insert"
        android:text="ENTER"
        android:backgroundTint="@color/dark_blue"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigator1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/light_grey"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menuview"

        />


</RelativeLayout>